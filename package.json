{
  "name": "bth-ramverk2-gomoku",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start-dev": "LOCAL_DEV_PORT=3001 nodemon ./bin/www",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run install-less && npm run build",
    "postinstall": "npm run install-client && npm run build-client",
    "eslint": "eslint --fix .; exit 0",
    "stylelint": "stylelint **/*.css; exit 0",
    "test-client": "cd client && npm run test",
    "posttest": "npm run eslint && npm run stylelint",
    "test": "nyc --reporter=html --reporter=text mocha 'test/**/*.js' --exit",
    "test-watch": "nyc --reporter=html --reporter=text mocha 'test/**/*.js' --watch",
    "test-scrutinizer": "nyc --all --reporter=clover mocha 'test/**/*.js' --exit",
    "validate": "npm run eslint && npm run stylelint && cd client && npm run validate-less",
    "report-codecov": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "start-docker": "docker-compose up -d",
    "stop-docker": "docker-compose down",
    "start-prod": "docker-compose -f docker-compose-prod.yml up -d",
    "test1": "docker-compose -f docker-compose-test.yml run ramverk2_latest_test",
    "test2": "docker-compose -f docker-compose-test.yml run ramverk2_node9_test",
    "test3": "docker-compose -f docker-compose-test.yml run ramverk2_node8_test"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "bth-mongodb-crud": "^1.0.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "mongodb": "^2.2.33",
    "morgan": "~1.9.0",
    "serve-favicon": "~2.4.5",
    "ws": "^3.3.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0",
    "stylelint": "^8.2.0",
    "supertest": "^3.0.0"
  }
}
