{
  "name": "bth-ramverk2-chat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start-dev": "LOCAL_DEV_PORT=3001 nodemon ./bin/www",
    "eslint": "eslint --fix .; exit 0",
    "stylelint": "stylelint **/*.css; exit 0",
    "test-client": "cd client && npm run test",
    "posttest": "npm run eslint && npm run stylelint",
    "test": "nyc --reporter=html --reporter=text mocha 'test/**/*.js'",
    "test-scrutinizer": "nyc --all --reporter=clover mocha test/**/*.js",
    "validate": "npm run eslint && npm run stylelint && cd client && npm run validate-less",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run install-less && npm run build",
    "report-codecov": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "test1": "docker-compose run ramverk2_chat_latest_test",
    "test2": "docker-compose run ramverk2_chat_node9_test",
    "test3": "docker-compose run ramverk2_chat_node8_test",
    "docker-start": "docker-compose run -p 3000:3000 ramverk2_chat_latest"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "morgan": "~1.9.0",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0",
    "stylelint": "^8.2.0",
    "supertest": "^3.0.0"
  }
}
